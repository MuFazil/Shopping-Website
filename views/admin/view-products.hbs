<section>
<div class="container">

<div class="row mt-4">
<a href="admin/add-product" class="btn btn-success ml-auto"> Add Product</a>
</div>

<table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
    </tr>
  </thead>


  <tbody>
  {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td class=""><img style="width:50px; height:50px"src="{{this.img}}"></td>
    </tr>
    {{/each}}
    
  </tbody>
</table>


</div></section>