
    <section>
      <div class="container">
        <div class="row mt-5">
        {{#each products}}
        <div class="col-md-3">
          <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="{{this.img}}" alt="Card image cap" />
            <div class="card-body">
              <h5 class="card-title">{{this.Name}}</h5>
              <p class="card-text">{{this.Description}}</p>
              <a href="#" class="btn btn-primary">Add to cart</a>
            </div>
          </div>
        </div>
        {{/each}}
        </div>
      </div>

    </section>

   